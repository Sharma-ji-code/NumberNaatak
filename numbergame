<body>
  <div class="container">
    <h1>ðŸŽ¯ Number Guessing Game</h1>
    <p>Guess a number between <strong>1</strong> and <strong>100</strong></p>
    <input type="number" id="guess" placeholder="Enter your guess" />
    <br>
    <button onclick="checkGuess()">Guess</button>
    <p id="result"></p>
  </div>

  <script>
    // create animated bubbles
    for(let i=0;i<15;i++){
      let bubble=document.createElement('div');
      bubble.classList.add('bubble');
      bubble.style.left=Math.random()*100+'%';
      bubble.style.width=bubble.style.height=10+Math.random()*40+'px';
      bubble.style.animationDuration=6+Math.random()*4+'s';
      document.body.appendChild(bubble);
    }

    let secret = Math.floor(Math.random() * 100) + 1;
    function checkGuess() {
      let guess = document.getElementById('guess').value;
      let result = document.getElementById('result');
      if (guess == secret) {
        result.textContent = 'ðŸŽ‰ Correct! You guessed the number!';
        result.style.color = '#2b7a78';
        document.body.style.background = 'linear-gradient(135deg, #43e97b, #38f9d7)';
      } else if (guess < secret) {
        result.textContent = 'â¬†ï¸ Too low! Try a higher number.';
        result.style.color = '#ff9800';
      } else {
        result.textContent = 'â¬‡ï¸ Too high! Try a lower number.';
        result.style.color = '#e91e63';
      }
    }
  </script>
